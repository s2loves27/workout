<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@drawable/calendar_main">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="25dp"
            android:text="@string/app_name"
            android:fontFamily="@font/ddangs_bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:gravity="center"
            >

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor = "@color/Mpuple5"
            app:boxStrokeWidthFocused = "1dp"
            app:boxStrokeWidth = "0.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColorHint="@color/gray5"
            android:hint="이메일 주소를 입력해주세요"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:layout_gravity="center" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor = "@color/Mpuple5"
            app:boxStrokeWidthFocused = "1dp"
            app:boxStrokeWidth = "0.5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/gray5"
            android:hint="비밀번호를 입력하세요">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_edit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="13dp"
                android:inputType="textPassword" />


        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/chk_login_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:checked="true"
            android:buttonTint="@color/Mpuple5"
            android:text="로그인 상태 유지" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginBottom="40dp"
        >

        <TextView
            android:id="@+id/txt_login_sign_in"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:includeFontPadding="false"


            android:layout_weight="1"
            android:background="@drawable/btn_oval_yes"
            android:fontFamily="@font/ddangs_bold"
            android:gravity="center"

            android:text="@string/txt_pre_sign_in"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp">

        </TextView>

        <Button
            android:id="@+id/btn_login_join"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"

            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:includeFontPadding="false"
            android:layout_marginBottom="10dp"

            android:minWidth="0dp"
            android:minHeight="0dp"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/mtrl_btn_text_btn_bg_color_selector"
            android:text="@string/txt_pre_sign_up"
            android:textColor="@color/gray8"
            android:textSize="15sp"
            android:fontFamily="@font/ddangs_light"

            />

        <ImageView
            android:id="@+id/iv_login_kako"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/kakao_login_large_wide"
            >

        </ImageView>

    </LinearLayout>


</LinearLayout>